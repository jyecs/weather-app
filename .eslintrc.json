{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [2, "double", {"avoidEscape": true}],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "allowForLoopAfterthoughts": true
        
    }
}
